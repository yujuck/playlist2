    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.10/dist/vue.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

    <script>

        $.urlParam = function (name) {
            var results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(window.location.href);
            if (results == null) {
                return null;
            }
            else {
                return results[1] || 0;
            }
        }
        var id = $.urlParam('user');
        var app = new Vue({
            el: '#app',
            data: {
                user: {},
                userid: ''
            },
            created: function () {
                axios.get('/user/checkLogin', { headers: { authorization: localStorage.getItem('token') } })
                    .then(function (res) {
                        
                        if (res.data.code == 419) {
                            console.log(res.data.message);
                            return false;
                            }
                        if (res.data.code == 401) {
                            console.log(res.data.message);
                            return false;
                        }
                        if (res.data.code == 200) {
                            this.userid = res.data.result;
                        }
                        
                    }.bind(this))
                    .catch(function (err) {
                        console.log(err);
                    });

                axios.get('/user/profile', { headers: { authorization: localStorage.getItem('token') } }).then(function (res) {
                    this.user = res.data.result;
                }.bind(this))
                    .catch(function (err) {
                        console.log(err);
                });

                axios.get('/yourpage/' + id)
                    .then(function (res) {
                        console.log(res.data);
                        this.user = res.data;
                    }.bind(this))
                    .catch(function (err) {
                        console.log(err);
                    });
            }
        });
    </script>
</body>

